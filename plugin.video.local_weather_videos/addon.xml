<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.local_weather_videos"
	name="Your Local Weather Report"
	version="0.0.1"
	provider-name="dvatterott">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
    <import addon="script.module.addon.common" version="2.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Add on for watching Local Weather Reports</summary>
    <description lang="en">This addon presents the most recent weather reports from your local nbc.</description>
    <platform>all</platform>
    <source>https://github.com/dvatterott/Kodi_addons/</source>
    <website>http://www.nbc.com/</website>
    <email>dvatterott@gmail.com</email>
    <license>GPL v2.0</license>
    <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
    </assets>
    <news>Initial Release!</news>
		<platform>all</platform>
  </extension>
</addon>
