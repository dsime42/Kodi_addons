<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.pbsnewshour"
	name="PBS Newshour"
	version="0.0.5"
	provider-name="dvatterott">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
    <import addon="script.module.addon.common" version="2.0.0"/>
		<import addon="plugin.video.youtube" version="5.3.10"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Add on for watching PBS Newshour</summary>
    <description lang="en">Add on that displays PBS newshour episodes. PBS newshour is the national news broadcast from PBS. It rocks.</description>
    <platform>all</platform>
    <source>https://github.com/dvatterott/Kodi_addons/</source>
    <website>http://www.pbs.org/newshour/</website>
    <email>dvatterott@gmail.com</email>
    <license>GPL v2.0</license>
    <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
    </assets>
    <news>Added plots to video links</news>
		<platform>all</platform>
  </extension>
</addon>
